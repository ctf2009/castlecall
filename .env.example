# CastleCall Configuration

# Web server port
PORT=3000

# Path to piper TTS binary
PIPER_PATH=piper

# Directory containing piper voice model files (.onnx + .onnx.json)
VOICES_DIR=~/.local/share/piper/voices

# Default voice model name (filename without .onnx extension)
DEFAULT_VOICE=en_GB-jenny_dioco-medium

# ALSA audio output device (use 'aplay -L' to list devices)
AUDIO_DEVICE=default

# Max characters allowed per announcement
MAX_TEXT_LENGTH=500

# Cache generated TTS audio for faster repeats/replays
CACHE_ENABLED=true

# Maximum number of cached WAV files
CACHE_MAX_FILES=100

# TTS provider to use by default: piper or elevenlabs
TTS_PROVIDER=piper

# ElevenLabs API key (required when using provider=elevenlabs)
ELEVENLABS_API_KEY=

# ElevenLabs default voice ID (required when TTS_PROVIDER=elevenlabs)
ELEVENLABS_VOICE_ID=

# ElevenLabs model ID
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# ElevenLabs output format (PCM is converted to WAV for playback)
ELEVENLABS_OUTPUT_FORMAT=pcm_22050

# ElevenLabs API timeout in milliseconds
ELEVENLABS_TIMEOUT_MS=15000

# Additional ElevenLabs voice IDs to always show in the UI (comma-separated)
ELEVENLABS_ADDITIONAL_VOICE_IDS=

# ElevenLabs voice list mode: all or custom_only
ELEVENLABS_VOICE_LIST_MODE=all

# ElevenLabs voice IDs to hide from the UI (comma-separated)
ELEVENLABS_HIDDEN_VOICE_IDS=
