# CastleCall Configuration

# Web server port
PORT=3000
# Path to piper binary (for many Pi installs: /usr/local/bin/piper-tts)
PIPER_PATH=piper
# Directory containing Piper voice models (.onnx + .onnx.json)
VOICES_DIR=~/.local/share/piper/voices
# Default Piper voice model name (filename without .onnx)
DEFAULT_VOICE=en_GB-jenny_dioco-medium
# ALSA audio output device (use 'aplay -L' to list devices)
AUDIO_DEVICE=default

# Maximum characters allowed per announcement
MAX_TEXT_LENGTH=500
# Cache generated WAV files for faster replay/repeats
CACHE_ENABLED=true
# Maximum number of cached WAV files
CACHE_MAX_FILES=100

# Default TTS provider: piper or elevenlabs
TTS_PROVIDER=piper

# ElevenLabs API key
ELEVENLABS_API_KEY=
# Default ElevenLabs voice ID used when no voice is selected
ELEVENLABS_VOICE_ID=
# ElevenLabs model ID
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
# ElevenLabs output format (use pcm_*; app converts PCM to WAV)
ELEVENLABS_OUTPUT_FORMAT=pcm_22050
# ElevenLabs request timeout in milliseconds
ELEVENLABS_TIMEOUT_MS=15000

# ElevenLabs voice list mode: all or custom_only
ELEVENLABS_VOICE_LIST_MODE=all
# Comma-separated ElevenLabs voice IDs to expose in the UI
ELEVENLABS_ADDITIONAL_VOICE_IDS=
# Comma-separated ElevenLabs voice IDs to hide from the UI
ELEVENLABS_HIDDEN_VOICE_IDS=
