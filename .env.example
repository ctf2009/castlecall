# CastleCall Configuration

# Web server port
PORT=3000

# Path to piper TTS binary
PIPER_PATH=piper

# Directory containing piper voice model files (.onnx + .onnx.json)
VOICES_DIR=~/.local/share/piper/voices

# Default voice model name (filename without .onnx extension)
DEFAULT_VOICE=en_GB-alba-medium

# ALSA audio output device (use 'aplay -L' to list devices)
AUDIO_DEVICE=default

# Max characters allowed per announcement
MAX_TEXT_LENGTH=500
